<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/emptyStateView"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
            android:id="@+id/emptyStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_nurmash_logo"
            android:drawablePadding="48dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="12.5sp"
            android:textColor="@color/normalText"
            android:textSize="17sp"
            android:textStyle="normal"
            tools:text="emptyStateText" />

    <TextView
            android:id="@+id/emptyStateAltText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="16sp"
            android:textColor="@color/lightText"
            android:textSize="13sp"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="emptyStateAlText"
            tools:visibility="visible" />

    <Button
            android:id="@+id/emptyStateActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:visibility="gone"
            tools:text="emptyStateActionButton"
            tools:visibility="visible" />

</LinearLayout>